
<div class="col-lg-10">
  <h2>Mostrar procedimiento</h2>
</div>
<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">

    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for home_index_path %>">Inicio</a>
      </li>
      <li>
        <a>Operativo</a>
      </li>
      <li>
        <a href="<%= url_for procedures_path %>">Procedimientos</a>
      </li>
      <li class="active">
        <strong>Mostrar</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Formulario<small> que muestra los datos de un procedimiento.</small></h5>

        </div>
        <div class="ibox-content">

          <div class="form-group">
            <h4>Nombre:</h4>
            <div class="col-sm-5">
              <%= @procedure.name%>
            </div><br>

              <h4>Cliente:</h4>
              <div class="col-sm-5">
                <%= Cliente.find(@procedure.cliente_id).nombre %>
              </div><br>


              <h4>Cuentas:</h4>
              <div class="col-sm-5">
                <%= @procedure.datosgenerales.collect{|d| d.account}%>
              </div><br>

                <h4>Enviar correo:</h4>
                <div class="col-sm-5">
                  <%= @procedure.deliver%>
                </div><br>

                <h4>NÃºmero:</h4>
                <div class="col-sm-5">
                  <%= @procedure.number%>
                </div><br>


            <br>
            <div class="hr-line-dashed"></div>
          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a href="<%= url_for procedures_path %>">
                <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Listado</button>
              </a>

              <a href="<%= url_for edit_procedure_path(@procedure) %>">
                <button class="btn btn-outline btn-success btn-rounded" type="button"><i class="fa fa-pencil"></i>&nbsp;Editar</button>
              </a>

              <a href="<%= url_for new_procedure_path %>">
                <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
              </a>
            </div>



          </div>
          <br><br>




        </div>
      </div>
    </div>
  </div>
</div>
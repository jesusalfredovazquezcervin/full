<h1>Listing logs</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Action</th>
      <th>Detail</th>
      <th>Field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.usuario %></td>
        <td><%= log.action %></td>
        <td><%= log.detail %></td>
        <td><%= log.field %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>

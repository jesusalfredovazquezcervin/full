
<div class="col-lg-10">
  <h2>Mostrar pasos</h2>
</div>
<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">

    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for home_index_path %>">Inicio</a>
      </li>
      <li>
        <a>Operativo</a>
      </li>
      <li>
        <a href="<%= url_for steps_path %>">Pasos</a>
      </li>
      <li class="active">
        <strong>Mostrar</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Formulario<small> que muestra los datos de un paso.</small></h5>

        </div>
        <div class="ibox-content">

          <div class="form-group">
            <h4>Procedimiento:</h4>
            <div class="col-sm-5">
              <%= Procedure.find(@step.procedure_id).name%>
            </div><br>

            <h4>Nombre del paso:</h4>
            <div class="col-sm-5">
              <%= @step.name%>
            </div><br>
            <br>

            <div class="form-group">
              <h4>Detalle:</h4>
              <div class="col-sm-5">
                <%= text_area_tag :detail, @step.detail, class: 'form-control', style: "height:150px;"%>


              </div>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <div class="hr-line-dashed"></div>
            <h4>Numero:</h4>
            <div class="col-sm-5">
              <%= @step.number%>
            </div><br>
            <br>
            <h4>Lleva formulario:</h4>
            <div class="col-sm-5">
              <%= @step.form%>
            </div><br>
            <br>
            <div class="hr-line-dashed"></div>
          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a href="<%= url_for steps_path %>">
                <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Listado</button>
              </a>

              <a href="<%= url_for edit_step_path(@step) %>">
                <button class="btn btn-outline btn-success btn-rounded" type="button"><i class="fa fa-pencil"></i>&nbsp;Editar</button>
              </a>

              <a href="<%= url_for new_step_path %>">
                <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
              </a>
            </div>



          </div>
          <br><br>




        </div>
      </div>
    </div>
  </div>
</div>
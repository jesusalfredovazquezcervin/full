<div class="col-lg-10">
  <h2>Mostrar campo</h2>
</div>
<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for home_index_path %>">Inicio</a>
      </li>
      <li>
        <a>Operativo</a>
      </li>
      <li>
        <a href="<%= url_for fields_path %>">Campos</a>
      </li>
      <li class="active">
        <strong>Mostrar</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Formulario<small> que muestra los datos de un campo.</small></h5>

        </div>
        <div class="ibox-content">

          <div class="form-group">
            <div class="form-group">
              <h4>Formulario:</h4>
              <div class="col-sm-5">
                <%= Form.find(@field.form_id).name%>
              </div><br>

              <h4>Nombre:</h4>
              <div class="col-sm-5">
                <%= @field.name%>
              </div><br>

              <h4>Tipo de dato:</h4>
              <div class="col-sm-5">
                <%= @field.data_type%>
              </div><br>
              <%if @field.data_type=="List"%>
                  <h4>Valores de Lista:</h4>
                  <div class="col-sm-5">
                    <%= @field.list%>
                  </div><br>
              <%end%>

              <h4>Obligatorio:</h4>
              <div class="col-sm-5">
                <%= @field.mandatory%>
              </div><br>
              <h4>Mostrar en listado:</h4>
              <div class="col-sm-5">
                <%= @field.show_in_list%>
              </div><br>
              <h4>Comportamiento:</h4>
              <div class="col-sm-5">
                <%= @field.behave%>
              </div><br>
              <h4>Posicion:</h4>
              <div class="col-sm-5">
                <%= @field.position%>
              </div><br>
            </div>
            <br>
            <div class="hr-line-dashed"></div>


          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a href="<%= url_for fields_path %>">
                <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Listado</button>
              </a>

              <a href="<%= url_for edit_field_path(@field) %>">
                <button class="btn btn-outline btn-success btn-rounded" type="button"><i class="fa fa-pencil"></i>&nbsp;Editar</button>
              </a>

              <a href="<%= url_for new_field_path %>">
                <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
              </a>
            </div>



          </div>
          <br><br>




        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal-dialog">
  <div class="modal-content animated flipInX">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4 class="modal-title">Cambiar contrase√±a</h4>
    </div>
    <div class="modal-body">

      <%= form_for @user, url: update_password_path, method: "patch", class: 'form-horizontal'  do |f| %>
          <div class="form-group">
            <div class="form-group">
              <%= f.label :current_password, class: 'col-sm-2 control-label'%><i>(we need your current password to confirm your changes)</i><br />
              <div class="col-sm-4">
                <%= f.password_field :current_password%>
              </div>
            </div>
            <br>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
              <%= f.label :password, class: 'col-sm-2 control-label'%><em>(8 caracteres minimo)</em>
              <div class="col-sm-4">
                <%= f.password_field :password, :autocomplete => "off"  %>
              </div>
            </div>
            <br>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: 'col-sm-2 control-label'%><em>(8 caracteres minimo)</em>
              <div class="col-sm-4">
                <%= f.password_field :password_confirmation, :autocomplete => "off"  %>
              </div>
            </div>
            <br>
            <div class="hr-line-dashed"></div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
            <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                 Actualizar
            <% end %>
          </div>
      <% end %>


    </div>
  </div>
</div>

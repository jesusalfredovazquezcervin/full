<div id="right-sidebar">
  <div class="sidebar-container">

    <ul class="nav nav-tabs navs-3">
      <li class="active"><a data-toggle="tab" href="#tab-data">
        Dat Gral
      </a>
      </li>
      <li id="lifaq">
        <a data-toggle="tab" href="#tab-faq">
          FAQ
        </a>
      </li>
      <li><a data-toggle="tab" href="#tab-scaling">
        Escalamiento
      </a>
      </li>

    </ul>

    <div class="tab-content">
      <div id="tab-data" class="tab-pane active">

        <div class="sidebar-title">
          <h3> <i class="fa fa-list-ul"></i> Datos generales  &nbsp;&nbsp;&nbsp;&nbsp;  Clave salida: <%=@cuenta.clavesalida%></h3>


          <small><i class="fa fa-tim"></i> Existen <%=@cliente.sucursals.count%> sucursales</small>
        </div>


        <div>

          <div class="sidebar-message">
            <ul>
              <%if @direccion.nil?%>
                  <li><strong>Direccion: </strong> No hay una direccion matriz</li>
              <%else%>
                  <li><strong>Direccion: </strong><%=@direccion.calle%> <%=@direccion.numero%>, <%=@direccion.colonia%> <%=@direccion.delegacion%> <%=@direccion.cp%></li>
                  <li><strong>Horario: </strong><small><%=@horario.try(:horario_semana)%></small></li>
              <%end%>
              <li><strong>Telefonos: </strong><%=@cuenta.telefono1%>
                <%if @cuenta.telefono2.nil? == false%>
                    , <%=@cuenta.telefono2%>
                <%end%>
              </li>
              <li><strong>Website: </strong><%=@cuenta.paginaweb%></li>
              <li><strong>Contacto: </strong><%=@contacto.try(:nombre)%></li>
              <li><strong>Giro: </strong><%=@cuenta.giro%></li>

                <li>
                  <strong>Cliente desde: </strong><%=@cuenta.alta.to_s(:month_day_year)%>
                </li>
                <li>
                  <strong>Locacion: </strong><%=@cuenta.locacion%>
                </li>
                <li>
                  <strong>DID: </strong><%=@cuenta.did%>
                </li>
                <li>
                  <strong>Tel enrutados: </strong><%=@cuenta.telenrutados%>
                </li>
                <li>
                  <strong>FAX: </strong><%=@cuenta.fax%>
                </li>
                <%if @cuenta.tipocambio%>
                    <li><%=@cliente.tipoCambio%></li>
                <%end%>

                <li>
                  <strong>Sucursales:</strong>
                  <ul>
                    <% @cliente.sucursals.each do |sucursal| %>
                        <li><%if sucursal.direccion.try(:matriz)%>
                              <strong> Matriz: <%= sucursal.nombre%> </strong>
                          <%else%>
                              <%= sucursal.nombre%>
                          <%end%>
                          | Tel: <%=sucursal.telefono%>
                          | Gerente: <%=sucursal.try(:contacto).try(:nombre)%>
                          | Contacto: <%=sucursal.try(:main).try(:nombre)%>
                          | Domicilio: <%=sucursal.try(:direccion).try(:calle)%>, <%=sucursal.try(:direccion).try(:numero)%>
                          <%if !sucursal.try(:direccion).try(:colonia).nil?%>
                              , <%=sucursal.direccion.colonia%>
                          <%end%>
                          ,<%=sucursal.try(:direccion).try(:delegacion)%>, <%=sucursal.try(:direccion).try(:cp)%>
                          | Referencia: <%=sucursal.try(:direccion).try(:referencia)%>
                          | Horario: <%= sucursal.horario.nil? == true ? (''):(sucursal.horario.horario_semana) %>

                          <%if (!sucursal.try(:direccion).try(:mapsgoogle).nil? && !sucursal.try(:direccion).try(:mapsgoogle).empty?) || !sucursal.try(:direccion).try(:photo_file_name).nil? %>
                              |<%= link_to show_maps_direccion_path(sucursal), target: "_blank"  do %>
                                  <i class="fa fa-map-marker"></i> <strong>Mapa</strong>
                              <% end %>
                          <%end%>


                        </li>
                        <br>
                    <%end%>
                  </ul>
                </li>


              </ul>

            <div class="row">
              <div class="col-lg-12">
                <div id="dg" class="panel-collapse collapse ">

                  <ul>
                    <li>
                      <strong>Cliente desde: </strong><%=@cuenta.alta.to_s(:month_day_year)%>
                    </li>
                    <li>
                      <strong>Locacion: </strong><%=@cuenta.locacion%>
                    </li>
                    <li>
                      <strong>DID: </strong><%=@cuenta.did%>
                    </li>
                    <li>
                      <strong>Tel enrutados: </strong><%=@cuenta.telenrutados%>
                    </li>
                    <li>
                      <strong>FAX: </strong><%=@cuenta.fax%>
                    </li>
                    <%if @cuenta.tipocambio%>
                        <li><%=@cliente.tipoCambio%></li>
                    <%end%>

                    <li>
                      <strong>Sucursales:</strong>
                      <ul>
                        <% @cliente.sucursals.each do |sucursal| %>
                            <li><%if sucursal.direccion.try(:matriz)%>
                                  <strong> Matriz: <%= sucursal.nombre%> </strong>
                              <%else%>
                                  <%= sucursal.nombre%>
                              <%end%>
                              | Tel: <%=sucursal.telefono%>
                              | Gerente: <%=sucursal.try(:contacto).try(:nombre)%>
                              | Contacto: <%=sucursal.try(:main).try(:nombre)%>
                              | Domicilio: <%=sucursal.try(:direccion).try(:calle)%>, <%=sucursal.try(:direccion).try(:numero)%>
                              <%if !sucursal.try(:direccion).try(:colonia).nil?%>
                                  , <%=sucursal.direccion.colonia%>
                              <%end%>
                              ,<%=sucursal.try(:direccion).try(:delegacion)%>, <%=sucursal.try(:direccion).try(:cp)%>
                              | Referencia: <%=sucursal.try(:direccion).try(:referencia)%>
                              | Horario: <%= sucursal.horario.nil? == true ? (''):(sucursal.horario.horario_semana) %>

                              <%if (!sucursal.try(:direccion).try(:mapsgoogle).nil? && !sucursal.try(:direccion).try(:mapsgoogle).empty?) || !sucursal.try(:direccion).try(:photo_file_name).nil? %>
                                  |<%= link_to show_maps_direccion_path(sucursal), target: "_blank"  do %>
                                      <i class="fa fa-map-marker"></i> <strong>Mapa</strong>
                                  <% end %>
                              <%end%>


                            </li>
                            <br>
                        <%end%>
                      </ul>
                    </li>


                  </ul>


                </div>
              </div>
            </div>



          </div>
        </div>

      </div>

      <div id="tab-faq" class="tab-pane">

        <div class="sidebar-title">
          <h3> <i class="fa fa-comments-o"></i> Frequently Asked Questions</h3>
          <small><i class="fa fa-tim"></i> Existen <%=@cuenta.asks.count%> Preguntas</small>
        </div>

        <div>

          <div class="sidebar-message">

            <% @cuenta.asks.order(voting: :desc).each_with_index do |ask, index| %>
                <div class="faq-item">
                  <div class="row">
                    <div class="col-md-7">
                      <a data-toggle="collapse" href="#faq-<%=index.to_s%>" class="faq-question">¿<%=ask.question%>?</a>
                      <small>Preguntada by <strong><%=ask.asked_by%></strong> <i class="fa fa-clock-o"></i> <%=ask.created_at.to_s%></small>
                    </div>
                    <div class="col-md-2">
                      <span class="small font-bold"><%=ask.answer_by%></span>
                      <div class="tag-list">
                        <span class="tag-item"><%=ask.subject%></span>
                      </div>
                    </div>
                    <div class="col-md-2 text-right">
                      <span class="small font-bold">Preguntado </span><br/>
                      <%=ask.voting%>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-11">
                      <div id="faq-<%=index.to_s%>" class="panel-collapse collapse">
                        <div class="faq-answer">
                          <p>
                            <%=ask.answer%>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            <%end%>
          </div>
        </div>

      </div>

      <div id="tab-scaling" class="tab-pane">

        <div class="sidebar-title">
          <h3> <i class="fa fa-cube"></i> Imagenes de escalamiento</h3>
          <small><i class="fa fa-tim"></i> Existen <%=@cuenta.scalings.count%> imagenes</small>
        </div>

        <ul class="sidebar-list">
          <% @cuenta.scalings.order(:id).each_with_index do |scaling, index| %>
              <li>
                <a href="#">
                  <h4><%=scaling.name%></h4>
                  <div class="lightBoxGallery">
                    <%if scaling.image1.url != '/images/original/missing.png'%>
                        <a href="<%= image_path(scaling.image1.url) %>" data-gallery="">
                          <img src="<%= image_path(scaling.image1.url(:thumb)) %>"></a>
                    <%end%>
                    <%if scaling.image2.url != '/images/original/missing.png'%>
                        <a href="<%= image_path(scaling.image2.url) %>" data-gallery="">
                          <img src="<%= image_path(scaling.image2.url(:thumb)) %>"></a>
                    <%end%>
                    <%if scaling.image3.url != '/images/original/missing.png'%>
                        <a href="<%= image_path(scaling.image3.url) %>" data-gallery="">
                          <img src="<%= image_path(scaling.image3.url(:thumb)) %>"></a>
                    <%end%>







                    <!-- The Gallery as lightbox dialog, should be a child element of the document body -->
                    <div id="blueimp-gallery" class="blueimp-gallery">
                      <div class="slides"></div>
                      <h3 class="title"></h3>
                      <a class="prev">‹</a>
                      <a class="next">›</a>
                      <a class="close">×</a>
                      <a class="play-pause"></a>
                      <ol class="indicator"></ol>
                    </div>
                  </div>
                </a>

              </li>

          <%end%>



        </ul>

      </div>
    </div>

  </div>



</div>


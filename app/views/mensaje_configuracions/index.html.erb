<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">

    <h2>Listado de Configuracion de pantalla de captura de mensajes</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
      </li>
      <li>
        <a>Operativo</a>
      </li>
      <li class="active">
        <strong>Captura Mensajes - Configuracion</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          &nbsp;<a href="<%= url_for :controller => 'mensaje_configuracions', :action => 'new' %>">
          <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
        </a>

          <div class="ibox-tools">
            Total records: <%= @mensaje_configuracions.count %>
            <a >
              <i class="fa fa-bars"></i>
            </a>
          </div>

        </div>
        <div class="ibox-content">

          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
            <tr>
              <th>Cliente</th>

              <th>Ticket</th>

              <th>&nbsp;&nbsp;Acciones</th>
            </tr>
            </thead>
            <tbody>
            <% @mensaje_configuracions.each do |mensaje| %>
                <tr>
                  <td><%= Cliente.find(mensaje.cliente_id).nombre %></td>
                  <td><%= mensaje.ticket%></td>
                  <td>
                    <%= link_to 'V', mensaje,class: "btn btn-primary btn-circle", title:"Ver" %>
                    <%= link_to 'M', edit_mensaje_configuracion_path(mensaje), class: "btn btn-warning btn-circle", title:"Modificar" %>
                    <%= link_to 'E', mensaje, method: :delete, class: "btn btn-danger btn-circle", title:"Eliminar" ,data: { confirm: '¿Está seguro?'} %>
                  </td>
                </tr>
            <% end %>


            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>


</div>

<% content_for :javascript do %>

    <script type="text/javascript">


        $(function() {

            $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });

            /* Init DataTables */
            var oTable = $('#editable').dataTable();

            /* Apply the jEditable handlers to the table */
            oTable.$('td').editable( '../example_ajax.php', {
                "callback": function( sValue, y ) {
                    var aPos = oTable.fnGetPosition( this );
                    oTable.fnUpdate( sValue, aPos[0], aPos[1] );
                },
                "submitdata": function ( value, settings ) {
                    return {
                        "row_id": this.parentNode.getAttribute('id'),
                        "column": oTable.fnGetPosition( this )[2]
                    };
                },

                "width": "90%",
                "height": "100%"
            } );


        });

    </script>



<% end %>


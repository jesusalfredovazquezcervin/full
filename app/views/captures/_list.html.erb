<table class="table table-striped table-bordered table-hover dataTables-example">
  <thead>
  <tr>
    <th>ID</th>
    <th>Fecha</th>
    <th>Operador</th>
    <th>Ticket</th>
    <th>&nbsp;&nbsp;Acciones</th>
  </tr>
  </thead>
  <tbody>
  <% @captures.order(created_at: :desc).each do |capture| %>
      <tr>
        <td><%=capture.id%></td>
        <td><%=capture.created_at.strftime("%d/%m/%Y %H:%M:%S")%></td>
        <td><%=Usuario.find(capture.usuario_id).email%></td>
        <td><%=capture.ticket%></td>
        <td>
          <%= link_to 'Ver', capture,class: "btn-white btn btn-xs", title:"Ver" %>
          <%= link_to 'Editar', edit_capture_path(capture), class: "btn-white btn btn-xs", title:"Modificar" %>
          <%= link_to 'Eliminar', capture, method: :delete, class: "btn-white btn btn-xs", title:"Eliminar" ,data: { confirm: '¿Está seguro?'} %>
        </td>
      </tr>
  <% end %>


  </tbody>
</table>
<% content_for :javascript do %>

    <script type="text/javascript">


        $(function() {

            $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });

            /* Init DataTables */
            var oTable = $('#editable').dataTable();

            /* Apply the jEditable handlers to the table */
            oTable.$('td').editable( '../example_ajax.php', {
                "callback": function( sValue, y ) {
                    var aPos = oTable.fnGetPosition( this );
                    oTable.fnUpdate( sValue, aPos[0], aPos[1] );
                },
                "submitdata": function ( value, settings ) {
                    return {
                        "row_id": this.parentNode.getAttribute('id'),
                        "column": oTable.fnGetPosition( this )[2]
                    };
                },

                "width": "90%",
                "height": "100%"
            } );


        });

    </script>



<% end %>
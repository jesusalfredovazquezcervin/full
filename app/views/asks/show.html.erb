
<div class="col-lg-10">
  <h2>Mostrar FAQ</h2>
</div>
<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">

    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for home_index_path %>">Inicio</a>
      </li>
      <li>
        <a>Operativo</a>
      </li>
      <li>
        <a href="<%= url_for asks_path %>">FAQ</a>
      </li>
      <li class="active">
        <strong>Mostrar</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Formulario<small> que muestra los datos de una pregunta FAQ.</small></h5>

        </div>
        <div class="ibox-content">

          <div class="form-group">
            <div class="form-group">
              <h4>Cliente:</h4>
              <div class="col-sm-5">
                <%= Cliente.find_by_id(@ask.cliente_id).try(:nombre) %>
              </div><br>

              <h4>Capturada por:</h4>
              <div class="col-sm-5">
                <%= Usuario.find_by_id(@ask.usuario_id).try(:email)%>
              </div><br>

              <h4>Pregunta:</h4>
              <div class="col-sm-5">
                <%= @ask.question%>
              </div><br>

              <h4>Hecha por:</h4>
              <div class="col-sm-5">
                <%= @ask.asked_by%>
              </div><br>
              <h4>Respuesta:</h4>
              <div class="col-sm-5">
                <%= @ask.answer%>
              </div><br>
              <h4>Respondida por:</h4>
              <div class="col-sm-5">
                <%=@ask.answer_by%>
              </div><br>
              <h4>Tema:</h4>
              <div class="col-sm-5">
                <%=@ask.subject%>
              </div><br>
              <h4>Fecha respondida</h4>
              <div class="col-sm-5">
                <%=@ask.answer_date%>
              </div><br>
              <h4>Votacion:</h4>
              <div class="col-sm-5">
                <%=@ask.voting%>
              </div><br>
            </div>
            <br>
            <div class="hr-line-dashed"></div>


          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a href="<%= url_for asks_path %>">
                <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Listado</button>
              </a>

              <a href="<%= url_for edit_ask_path(@ask) %>">
                <button class="btn btn-outline btn-success btn-rounded" type="button"><i class="fa fa-pencil"></i>&nbsp;Editar</button>
              </a>

              <a href="<%= url_for new_ask_path %>">
                <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
              </a>
            </div>



          </div>
          <br><br>




        </div>
      </div>
    </div>
  </div>
</div>
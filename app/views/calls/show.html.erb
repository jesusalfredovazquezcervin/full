
<div class="col-lg-10">
  <h2>Mostrar Llamada</h2>
</div>
<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">

    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
      </li>
      <li>
        <a>Catalogos</a>
      </li>
      <li>
        <a href="<%= url_for calls_path %>">Llamadas</a>

      </li>
      <li class="active">
        <strong>Mostrar</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Formulario<small> que muestra los datos de una llamada.</small></h5>

        </div>
        <div class="ibox-content">

          <div class="form-group">
            <div class="form-group">
              <h4>ID:</h4>
              <div class="col-sm-5">
                <%= @call.id %>
              </div><br>
              <h4>Inicio:</h4>
              <div class="col-sm-5">
                <%= @call.start%>
              </div><br>
              <h4>Fin:</h4>
              <div class="col-sm-5">
                <%= @call.end %>
              </div><br>




              <h4>Registro Capturado:</h4>
              <div class="col-sm-5">
                <%if !@call.information_id.nil? %>
                    <%= link_to @call.information_id, information_path(@call.information), target: "_blank"%>
                <%end%>
              </div><br>

              <h4>Hecha por:</h4>
              <div class="col-sm-5">
                <%= @call.try(:information).try(:usuario).try(:email)%>
              </div><br>

              <h4>Fecha llamada:</h4>
              <div class="col-sm-5">
                <%= @call.created_at%>
              </div><br>


            </div>
            <br>
            <div class="hr-line-dashed"></div>


          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a href="<%= url_for calls_path %>">
                <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Listado</button>
              </a>
            </div>



          </div>
          <br><br>




        </div>
      </div>
    </div>
  </div>
</div>







<div class="col-lg-10">
  <h2>Mostrar cliente</h2>
</div>
<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">

    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
      </li>
      <li>
        <a>Catalogos</a>
      </li>
      <li>
        <a href="<%= url_for :controller => 'clientes', :action => 'index' %>">Clientes</a>

      </li>
      <li class="active">
        <strong>Mostrar</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Formulario<small> que muestra los datos de un cliente.</small></h5>

        </div>
        <div class="ibox-content">

              <div class="form-group">
                <div class="form-group">
                  <h4>Razon social:</h4>
                  <div class="col-sm-5">
                    <%= @cliente.nombre %>
                  </div><br>

                  <h4>Nombre comercial:</h4>
                  <div class="col-sm-5">
                    <%= @cliente.nombreComercial %>
                  </div><br>

                  <h4>Rfc:</h4>
                  <div class="col-sm-5">
                    <%= @cliente.rfc%>
                  </div><br>
                  <h4>Direcion facturacion:</h4>
                  <div class="col-sm-5">
                    <% if (@cliente.direccion_id.nil? == false) %>
                        <%= Direccion.find(@cliente.direccion_id).id.to_s << ' - ' << Sucursal.find(Direccion.find(@cliente.direccion_id).sucursal_id).nombre %>
                    <%end%>
                  </div><br>
                  <h4>Forma de pago:</h4>
                  <div class="col-sm-5">
                    <% if (@cliente.formapago_id.nil? == false) %>
                        <%= Formapago.find(@cliente.formapago_id).nombre%>
                    <%end%>
                  </div><br>

                </div>
                <br>
                <div class="hr-line-dashed"></div>


              </div>

              <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                  <a href="<%= url_for :controller => 'clientes', :action => 'index' %>">
                    <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Listado</button>
                  </a>

                  <a href="<%= url_for :controller => 'clientes', :action => 'edit', :id => @cliente.id %>">
                    <button class="btn btn-outline btn-success btn-rounded" type="button"><i class="fa fa-pencil"></i>&nbsp;Editar</button>
                  </a>

                  <a href="<%= url_for :controller => 'clientes', :action => 'new' %>">
                    <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
                  </a>
                </div>



              </div>
              <br><br>




        </div>
      </div>
    </div>
  </div>
</div>






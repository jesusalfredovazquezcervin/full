<h1>Listing sents</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Information</th>
      <th>Recipient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sents.each do |sent| %>
      <tr>
        <td><%= sent.usuario %></td>
        <td><%= sent.information %></td>
        <td><%= sent.recipient %></td>
        <td><%= link_to 'Show', sent %></td>
        <td><%= link_to 'Edit', edit_sent_path(sent) %></td>
        <td><%= link_to 'Destroy', sent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sent', new_sent_path %>

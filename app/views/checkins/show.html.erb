<div class="col-lg-10">
  <h2>Mostrar checada</h2>
</div>
<p id="notice"><%= notice %></p>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for home_index_path %>">Inicio</a>
      </li>
      <li>
        <a>Configuracion</a>
      </li>
      <li>
        <a href="<%= url_for products_path %>">Checadas</a>
      </li>
      <li class="active">
        <strong>Mostrar</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Formulario<small> que muestra los datos de una checada.</small></h5>
        </div>
        <div class="ibox-content">
          <div class="form-group">
            <div class="form-group">
              <h4>ID:</h4>
              <div class="col-sm-5">
                <%= @checkin.id%>
              </div><br>
              <h4>Empleado:</h4>
              <div class="col-sm-5">
                <%= Usuario.find_by_id(@checkin.usuario_id).email%>
              </div><br>
              <h4>Checada:</h4>
              <div class="col-sm-5">
                <%= @checkin.checkin%>
              </div><br>

              <h4>Tipo:</h4>
              <div class="col-sm-5">
                <%= @checkin.kind%>
              </div><br>
            </div>
            <br>
            <div class="hr-line-dashed"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a href="<%= url_for checkins_path%>">
                <button class="btn btn-outline btn-danger btn-rounded" type="button"><i class="fa fa-list-ol"></i>&nbsp;Listado</button>
              </a>
              <a href="<%= url_for edit_checkin_path(@checkin) %>">
                <button class="btn btn-outline btn-success btn-rounded" type="button"><i class="fa fa-pencil"></i>&nbsp;Editar</button>
              </a>
              <a href="<%= url_for new_checkin_path %>">
                <button class="btn btn-outline btn-warning btn-rounded" type="button"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
              </a>
            </div>
          </div>
          <br><br>
        </div>
      </div>
    </div>
  </div>
</div>





